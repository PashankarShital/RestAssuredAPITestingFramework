<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="API Test Suite" verbose="1" parallel="classes" thread-count="4">
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.testing.automation.tests.CreateBookingRequest"/>
            <class name="com.testing.automation.tests.GetBookingRequest"/>
            <class name="com.testing.automation.tests.UpdateBookingRequest"/>
            <class name="com.testing.automation.tests.PartialUpdateBookingRequest"/>
            <class name="com.testing.automation.tests.DeleteBookingRequest"/>
        </classes>
    </test>
</suite>
